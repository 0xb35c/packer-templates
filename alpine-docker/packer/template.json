{
  "builders": [
    {
      "boot_command": [
        "root<enter>",
        "<wait>",
        "ifconfig eth0 up && udhcpc -q -n -i eth0<enter>",
        "<wait>",
        "wget -O - http://{{ .HTTPIP }}:{{ .HTTPPort }}/init.sh | /bin/sh<enter>"
      ],
      "boot_wait": "30s",
      "communicator": "ssh",
      "disk_size": 51200,
      "guest_additions_mode": "disable",
      "guest_os_type": "Linux26_64",
      "hard_drive_interface": "sata",
      "headless": false,
      "http_directory": "http",
      "iso_checksum": "c0daab130ff32399bfce8893d7f6c591078ce8f87e82a2b987f8832fa6cf2d76",
      "iso_checksum_type": "sha256",
      "iso_url": "http://dl-cdn.alpinelinux.org/alpine/v3.8/releases/x86_64/alpine-virt-3.8.0-x86_64.iso",
      "shutdown_command": "sudo /sbin/poweroff",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_wait_timeout": "5m",
      "type": "virtualbox-iso",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "512"],
        ["modifyvm", "{{.Name}}", "--cpus", "1"]
      ],
      "virtualbox_version_file": ".vbox_version"
    }
  ],
  "description": "Alpine Linux 3.8 x86_64 With Docker",
  "post-processors": [
    [
      {
        "keep_input_artifact": true,
        "type": "vagrant",
        "output": "alpine_with_docker"
      }
    ]
  ],
  "provisioners": [
    {
      "override": {
        "virtualbox-iso": {
          "execute_command": "sudo -S /bin/sh '{{ .Path }}'"
        }
      },
      "scripts": [
        "scripts/upgrade.sh",
        "scripts/setup.sh",
        "scripts/vagrant-ssh.sh",
        "scripts/chrony.sh",
        "scripts/docker.sh",
        "scripts/shrink.sh"
      ],
      "type": "shell"
    }
  ]
}
